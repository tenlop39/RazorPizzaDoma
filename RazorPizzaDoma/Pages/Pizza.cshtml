@page
@model RazorPizzaDoma.Pages.PizzaModel
@{
}

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our great selection of pizzas!</h1>
        <h4>Choose one, or try our Pizza builder! Then order and done!</h4>
        <h4>No need to give any of your details!</h4>
        <h4>We already know everythink!</h4>
        <p class="smallText"><i>Onli one pizza per order.</i></p>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" class="w-100"/>
                    </div>
                    <div class="col-8 alig-items-center"> @*???proc je tady alig misto align. jaky je rozdil????*@ 
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create your own Pizza!</h3>
                            <p style="text-align:left;">Make your own pizza with our PizzaMaker!</p>
                            <a class="btn btn-primary" style="float:left;" asp-page="Forms/CustomPizza">Try now! </a>
                        </div>
                    </div>
                </div>
            </div>                                    
            @foreach (var pizza in Model.fakePizzaDB) //proc musime mit promenou pizza nestici pouzivat Model resp @Model
                                                     //promenna pizza ma pristup do slozky Models, PizzaModel
                                                     //fakePizzasDB je odkazovana na PizasModes. Fungoje to tedy i obracene, zalizim promennou pizza a kdyz ji odkazu na PizzaModel, tak se dokaze spojit s fakePizzasDB?
                                                     //co je Model, znamena PizzaModel a ne PizzasModel?
            {
                var imagePath = "~/images/Pizzas/" + (pizza.ImageTitle + ".png");

                <div class="col-4 mb-5">
                    <img src="@imagePath" class="w-100" asp-append-version=true />
                    <a class="btn btn-primary mt-1" asp-asp-area="" asp-page="Checkout/Checkout" asp-route-ImageTitle="@pizza.ImageTitle" asp-route-PizzaName="@pizza.PizzaName" asp-route-PizzaPrice="@pizza.FinalPrice">Get this Pizza!</a>
                    @*wtf is this? jak to dokaze nasmerovat jmeno a img*@
                    <br/>
                </div>
            }
        </div>
    </div>
</div>